{
  "name": "@mvp-kit/core",
  "displayName": "MVPKit Core Template",
  "version": "0.0.1",
  "description": "Full-stack TypeScript monorepo with React + Vite frontend and Cloudflare Workers backend",
  "author": "MVPKit Team",
  "repository": "https://github.com/mvp-kit/core",
  "features": [
    "Full-stack TypeScript monorepo",
    "React + Vite frontend",
    "Cloudflare Workers backend",
    "Shared UI components",
    "Database integration ready",
    "shadcn/ui component system"
  ],
  "componentPacks": {
    "basic": {
      "description": "Essential UI components for basic layouts",
      "components": [
        "button",
        "card",
        "input",
        "label",
        "separator"
      ]
    },
    "all": {
      "description": "Complete set of available components",
      "components": [
        "accordion",
        "alert",
        "alert-dialog",
        "aspect-ratio",
        "avatar",
        "badge",
        "breadcrumb",
        "button",
        "calendar",
        "card",
        "carousel",
        "checkbox",
        "collapsible",
        "combobox",
        "command",
        "context-menu",
        "data-table",
        "date-picker",
        "dialog",
        "drawer",
        "dropdown-menu",
        "form",
        "hover-card",
        "input",
        "input-otp",
        "label",
        "menubar",
        "navigation-menu",
        "pagination",
        "popover",
        "progress",
        "radio-group",
        "resizable",
        "scroll-area",
        "select",
        "separator",
        "sheet",
        "skeleton",
        "slider",
        "sonner",
        "switch",
        "table",
        "tabs",
        "textarea",
        "toast",
        "toggle",
        "toggle-group",
        "tooltip"
      ]
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManagers": ["pnpm", "bun"],
  "defaultPackageManager": "pnpm"
}