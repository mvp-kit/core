{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "public/**", "index.html", "vite.config.*", "wrangler.toml", "tsconfig.json"],
      "outputs": ["dist/**", ".wrangler/**"]
    },
    "build:validate": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "wrangler.toml"],
      "outputs": [".wrangler/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "deploy": {
      "dependsOn": ["build:validate"],
      "cache": false
    }
  }
}