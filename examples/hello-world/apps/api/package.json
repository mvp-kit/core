{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "description": "hello-world - backend",
  "scripts": {
    "build": "tsc --noEmit",
    "deploy:app": "wrangler d1 migrations apply hello-world-db --env production --remote || echo 'No migrations to apply' && wrangler deploy --env production",
    "dev": "wrangler dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .wrangler dist",
    "db:init": "mkdir -p .wrangler/state/v3/d1/miniflare-D1DatabaseObject && echo 'Local D1 database initialized'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply hello-world-db --env production --remote",
    "db:migrate:local": "wrangler d1 migrations apply hello-world-db-dev --local",
    "db:execute:local": "wrangler d1 execute hello-world-db-dev --local",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/trpc-server": "0.4.0",
    "@repo/types": "workspace:*",
    "@repo/config": "workspace:*",
    "@trpc/server": "11.5.1",
    "better-auth": "1.3.9",
    "better-auth-cloudflare": "0.2.4",
    "drizzle-orm": "0.44.5",
    "hono": "4.9.7",
    "zod": "4.1.8"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "1.13.1",
    "@cloudflare/workers-types": "4.20250913.0",
    "@types/node": "24.4.0",
    "drizzle-kit": "0.31.4",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "wrangler": "4.37.0"
  }
}